<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="AppHub.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:views="clr-namespace:AppHub.Views" Title="AppHub" Width="1080" Height="720" MinWidth="800" MinHeight="600" Icon="pack://application:,,,/icon/AppHub.ico" xmlns:apphub="clr-namespace:AppHub">
  <Grid>
    <Grid Name="BackgroundImageLayer" Visibility="Collapsed" IsHitTestVisible="False" />
    <Border Name="BackgroundOverlayLayer" Visibility="Collapsed" Background="Transparent" IsHitTestVisible="False" />
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="24*" MinWidth="180" MaxWidth="260" />
        <ColumnDefinition Width="76*" />
      </Grid.ColumnDefinitions>
      <Border Grid.Column="0" Background="{DynamicResource SidebarBgBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
        <DockPanel>
          <StackPanel DockPanel.Dock="Top" Margin="20,24,20,32">
            <StackPanel Orientation="Horizontal">
              <Border Width="40" Height="40" CornerRadius="10" Background="{DynamicResource PrimaryBrush}">
                <TextBlock Text="A" FontSize="20" FontWeight="Bold" Foreground="#FFFFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="AppHub" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextBrush}" />
                <TextBlock Text="应用总览启动器" FontSize="12" Foreground="{DynamicResource SubtleTextBrush}" Margin="0,2,0,0" />
              </StackPanel>
            </StackPanel>
          </StackPanel>
          <TabControl Name="MainTabControl" TabStripPlacement="Left" Margin="12,0,12,24" Style="{StaticResource NavigationTabControl}">
            <TabItem Header="📋  总览">
              <views:OverviewView />
            </TabItem>
            <TabItem Header="⚙️  设置">
              <views:SettingsView />
            </TabItem>
          </TabControl>
        </DockPanel>
      </Border>
      <ContentPresenter Grid.Column="1" Margin="0" Content="{Binding SelectedContent, ElementName=MainTabControl}" />
    </Grid>
  </Grid>
</Window>
