<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="AppHub.Views.Dialogs.AddAppDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="添加应用" Width="480" Height="240" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="{DynamicResource AppBgBrush}" xmlns:dialogs="clr-namespace:AppHub.Views.Dialogs;assembly=AppHub">
  <Grid Margin="24">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Border Background="{DynamicResource CardBgBrush}" CornerRadius="12" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="20">
      <StackPanel>
        <TextBlock Text="📂  选择应用程序" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,16" />
        <TextBlock Text="文件路径" FontSize="13" Foreground="{DynamicResource SubtleTextBrush}" Margin="0,0,0,8" />
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <TextBox Text="{Binding SelectedPath, UpdateSourceTrigger=PropertyChanged}" />
          <Button Grid.Column="1" Content="浏览" Margin="10,0,0,0" Style="{StaticResource SecondaryButton}" Padding="14,10" Click="OnBrowse" />
        </Grid>
      </StackPanel>
    </Border>
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
      <Button Content="添加" Padding="20,10" Click="OnAdd" />
      <Button Margin="10,0,0,0" Content="取消" Style="{StaticResource SecondaryButton}" Padding="20,10" Click="OnCancel" />
    </StackPanel>
  </Grid>
</Window>