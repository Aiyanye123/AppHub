<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="AppHub.Views.Dialogs.EditAppDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="编辑应用" Width="520" Height="560" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="{DynamicResource AppBgBrush}" xmlns:dialogs="clr-namespace:AppHub.Views.Dialogs;assembly=AppHub">
  <Grid Margin="24">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Border Background="{DynamicResource CardBgBrush}" CornerRadius="12" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="24">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
          <TextBlock Text="✏️  编辑应用配置" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20" />
          <TextBlock Text="显示名称" FontSize="13" Foreground="{DynamicResource SubtleTextBrush}" Margin="0,0,0,8" />
          <TextBox Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" />
          <TextBlock Text="分组名称" FontSize="13" Foreground="{DynamicResource SubtleTextBrush}" Margin="0,16,0,8" />
          <TextBox Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}" />
          <TextBlock Text="目标路径" FontSize="13" Foreground="{DynamicResource SubtleTextBrush}" Margin="0,16,0,8" />
          <TextBox Text="{Binding TargetPath, UpdateSourceTrigger=PropertyChanged}" />
          <TextBlock Text="启动参数" FontSize="13" Foreground="{DynamicResource SubtleTextBrush}" Margin="0,16,0,8" />
          <TextBox Text="{Binding Arguments, UpdateSourceTrigger=PropertyChanged}" />
          <TextBlock Text="工作目录" FontSize="13" Foreground="{DynamicResource SubtleTextBrush}" Margin="0,16,0,8" />
          <TextBox Text="{Binding WorkingDirectory, UpdateSourceTrigger=PropertyChanged}" />
          <TextBlock Text="图标设置" FontSize="13" Foreground="{DynamicResource SubtleTextBrush}" Margin="0,16,0,8" />
          <TextBox Name="CustomIconPathBox" IsReadOnly="True" Text="{Binding CustomIconPath}" />
          <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="选择自定义图标" Click="OnBrowseCustomIcon" />
            <Button Margin="10,0,0,0" Content="恢复自动图标" Style="{StaticResource SecondaryButton}" Click="OnResetIcon" />
          </StackPanel>
          <TextBlock Name="IconModeText" Text="当前：自动提取应用图标" FontSize="12" Foreground="{DynamicResource SubtleTextBrush}" Margin="0,6,0,0" />
          <CheckBox Margin="0,20,0,0" Content="跟踪进程状态" IsChecked="{Binding TrackProcess}" />
          <TextBlock Text="启用后，AppHub 将监控此应用的运行状态" FontSize="12" Foreground="{DynamicResource SubtleTextBrush}" Margin="30,4,0,0" />
        </StackPanel>
      </ScrollViewer>
    </Border>
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
      <Button Content="保存" Padding="20,10" Click="OnSave" />
      <Button Margin="10,0,0,0" Content="取消" Style="{StaticResource SecondaryButton}" Padding="20,10" Click="OnCancel" />
    </StackPanel>
  </Grid>
</Window>
