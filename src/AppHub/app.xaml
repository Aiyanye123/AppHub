      <Color x:Key="PrimaryGradientEndColor">#11233F</Color>
      <Color x:Key="PrimaryGradientHoverStartColor">#21406E</Color>
      <Color x:Key="PrimaryGradientHoverEndColor">#17305A</Color>
      <Color x:Key="PrimaryGradientPressedStartColor">#163053</Color>
      <Color x:Key="PrimaryGradientPressedEndColor">#102542</Color>
      <Color x:Key="SuccessGradientStartColor">#2EB77E</Color>
      <Color x:Key="SuccessGradientEndColor">#1F9F6B</Color>
      <Color x:Key="SuccessGradientHoverStartColor">#39C488</Color>
      <Color x:Key="SuccessGradientHoverEndColor">#29AD76</Color>
      <Color x:Key="SuccessGradientPressedStartColor">#249364</Color>
      <Color x:Key="SuccessGradientPressedEndColor">#1C7F56</Color>
