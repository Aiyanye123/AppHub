        <GradientStop Offset="1" Color="{StaticResource SuccessGradientHoverEndColor}" />
      </LinearGradientBrush>
      <LinearGradientBrush x:Key="SuccessButtonPressedBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="{StaticResource SuccessGradientPressedStartColor}" />
        <GradientStop Offset="1" Color="{StaticResource SuccessGradientPressedEndColor}" />
      </LinearGradientBrush>
      <SolidColorBrush x:Key="AccentBrush" po:Freeze="False" Color="{StaticResource AccentColor}" />
      <SolidColorBrush x:Key="SuccessBrush" po:Freeze="False" Color="{StaticResource SuccessColor}" />
      <SolidColorBrush x:Key="TextBrush" po:Freeze="False" Color="{StaticResource TextColor}" />
      <SolidColorBrush x:Key="SubtleTextBrush" po:Freeze="False" Color="{StaticResource SubtleTextColor}" />
      <SolidColorBrush x:Key="BorderBrush" po:Freeze="False" Color="{StaticResource BorderColor}" />
      <SolidColorBrush x:Key="HoverBgBrush" po:Freeze="False" Color="{StaticResource HoverBgColor}" />
      <SolidColorBrush x:Key="AmbientGlowBrush" po:Freeze="False" Color="{StaticResource AmbientGlowColor}" />
      <SolidColorBrush x:Key="DisabledBgBrush" po:Freeze="False" Color="#CBD5E1" />
      <SolidColorBrush x:Key="DisabledBorderBrush" po:Freeze="False" Color="#E2E8F0" />
      <SolidColorBrush x:Key="DisabledTextBrush" po:Freeze="False" Color="#94A3B8" />
      <SolidColorBrush x:Key="ScrollBarTrackBrush" po:Freeze="False" Color="#00FFFFFF" />
      <SolidColorBrush x:Key="ScrollBarThumbBrush" po:Freeze="False" Color="{StaticResource ScrollBarThumbColor}" />
      <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" po:Freeze="False" Color="{StaticResource ScrollBarThumbHoverColor}" />
      <SolidColorBrush x:Key="ScrollBarThumbPressedBrush" po:Freeze="False" Color="{StaticResource ScrollBarThumbPressedColor}" />
      <FontFamily x:Key="AppFont">Segoe UI Variable, Segoe UI, Microsoft YaHei UI</FontFamily>
      <Style x:Key="{x:Type Window}" TargetType="{x:Type Window}">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Background" Value="{DynamicResource AppSurfaceBrush}" />
      </Style>
      <Style x:Key="PrimaryButton" TargetType="{x:Type system:Button}">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="#FFFFFFFF" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FrameworkElement.Cursor" Value="Hand" />
        <Setter Property="Template">
          <Setter.Value>
            <system:ControlTemplate TargetType="{x:Type system:Button}">
              <system:Border Name="border" Background="{TemplateBinding system:Control.Background}" CornerRadius="8" Padding="{TemplateBinding system:Control.Padding}" SnapsToDevicePixels="True">
                <system:Border.RenderTransform>
                  <TranslateTransform />
                </system:Border.RenderTransform>
                <system:Border.Effect>
                  <DropShadowEffect BlurRadius="14" ShadowDepth="4" Opacity="0.1" Direction="270" />
                </system:Border.Effect>
                <system:ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
              </system:Border>
              <system:ControlTemplate.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <Setter TargetName="border" Value="{DynamicResource PrimaryHoverBrush}" Property="system:Border.Background" />
                  <Trigger.EnterActions>
                    <BeginStoryboard>
                      <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="-1.5" Duration="0:0:0.12" />
                      </Storyboard>
                    </BeginStoryboard>
                  </Trigger.EnterActions>
                  <Trigger.ExitActions>
                    <BeginStoryboard>
                      <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.12" />
                      </Storyboard>
                    </BeginStoryboard>
                  </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                  <Setter TargetName="border" Value="{DynamicResource PrimaryPressedBrush}" Property="system:Border.Background" />
                  <Setter TargetName="border" Property="UIElement.RenderTransform">
                    <Setter.Value>
                      <TranslateTransform Y="0" />
                    </Setter.Value>
                  </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                  <Setter TargetName="border" Value="{DynamicResource DisabledBgBrush}" Property="system:Border.Background" />
                  <Setter Value="{DynamicResource DisabledTextBrush}" Property="Foreground" />
                </Trigger>
              </system:ControlTemplate.Triggers>
            </system:ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="SecondaryButton" TargetType="{x:Type system:Button}">
        <Setter Property="Background" Value="#00FFFFFF" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FrameworkElement.Cursor" Value="Hand" />
        <Setter Property="Template">
          <Setter.Value>
            <system:ControlTemplate TargetType="{x:Type system:Button}">
              <system:Border Name="border" Background="{TemplateBinding system:Control.Background}" BorderBrush="{TemplateBinding system:Control.BorderBrush}" BorderThickness="{TemplateBinding system:Control.BorderThickness}" CornerRadius="8" Padding="{TemplateBinding system:Control.Padding}" SnapsToDevicePixels="True">
                <system:Border.RenderTransform>
                  <TranslateTransform />
                </system:Border.RenderTransform>
                <system:ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
              </system:Border>
              <system:ControlTemplate.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <Setter TargetName="border" Value="{DynamicResource HoverBgBrush}" Property="system:Border.Background" />
                  <Setter TargetName="border" Value="{DynamicResource BorderBrush}" Property="system:Border.BorderBrush" />
                  <Trigger.EnterActions>
                    <BeginStoryboard>
                      <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="-1" Duration="0:0:0.12" />
                      </Storyboard>
                    </BeginStoryboard>
                  </Trigger.EnterActions>
                  <Trigger.ExitActions>
                    <BeginStoryboard>
                      <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.12" />
                      </Storyboard>
                    </BeginStoryboard>
                  </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                  <Setter TargetName="border" Value="{DynamicResource HoverBgBrush}" Property="system:Border.Background" />
                  <Setter TargetName="border" Property="UIElement.RenderTransform">
                    <Setter.Value>
                      <TranslateTransform Y="0" />
                    </Setter.Value>
                  </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                  <Setter Value="{DynamicResource DisabledTextBrush}" Property="Foreground" />
                  <Setter TargetName="border" Value="{DynamicResource DisabledBorderBrush}" Property="system:Border.BorderBrush" />
                </Trigger>
              </system:ControlTemplate.Triggers>
            </system:ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="SuccessButton" TargetType="{x:Type system:Button}">
        <Setter Property="Background" Value="{DynamicResource SuccessButtonBrush}" />
        <Setter Property="Foreground" Value="#FFFFFFFF" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FrameworkElement.Cursor" Value="Hand" />
        <Setter Property="Template">
          <Setter.Value>
            <system:ControlTemplate TargetType="{x:Type system:Button}">
              <system:Border Name="border" Background="{TemplateBinding system:Control.Background}" CornerRadius="8" Padding="{TemplateBinding system:Control.Padding}" SnapsToDevicePixels="True">
                <system:Border.RenderTransform>
                  <TranslateTransform />
                </system:Border.RenderTransform>
                <system:Border.Effect>
                  <DropShadowEffect BlurRadius="14" ShadowDepth="4" Opacity="0.12" Direction="270" />
                </system:Border.Effect>
                <system:ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
              </system:Border>
              <system:ControlTemplate.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <Setter TargetName="border" Value="{DynamicResource SuccessButtonHoverBrush}" Property="system:Border.Background" />
                  <Trigger.EnterActions>
                    <BeginStoryboard>
                      <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="-1.5" Duration="0:0:0.12" />
                      </Storyboard>
                    </BeginStoryboard>
                  </Trigger.EnterActions>
                  <Trigger.ExitActions>
                    <BeginStoryboard>
                      <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.12" />
                      </Storyboard>
                    </BeginStoryboard>
                  </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                  <Setter TargetName="border" Value="{DynamicResource SuccessButtonPressedBrush}" Property="system:Border.Background" />
                  <Setter TargetName="border" Property="UIElement.RenderTransform">
                    <Setter.Value>
                      <TranslateTransform Y="0" />
                    </Setter.Value>
                  </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                  <Setter TargetName="border" Value="{DynamicResource DisabledBgBrush}" Property="system:Border.Background" />
                  <Setter Value="{DynamicResource DisabledTextBrush}" Property="Foreground" />
                </Trigger>
              </system:ControlTemplate.Triggers>
            </system:ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="{x:Type system:Button}" TargetType="{x:Type system:Button}" BasedOn="{StaticResource PrimaryButton}" />
      <Style x:Key="{x:Type system:TextBox}" TargetType="{x:Type system:TextBox}">
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="Background" Value="{DynamicResource CardBgBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
        <Setter Property="Template">
          <Setter.Value>
            <system:ControlTemplate TargetType="{x:Type system:TextBox}">
              <system:Border Name="border" Background="{TemplateBinding system:Control.Background}" BorderBrush="{TemplateBinding system:Control.BorderBrush}" BorderThickness="{TemplateBinding system:Control.BorderThickness}" CornerRadius="8" SnapsToDevicePixels="True">
                <system:ScrollViewer Name="PART_ContentHost" Margin="{TemplateBinding system:Control.Padding}" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" />
              </system:Border>
              <system:ControlTemplate.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <Setter TargetName="border" Value="{DynamicResource SubtleTextBrush}" Property="system:Border.BorderBrush" />
                </Trigger>
                <Trigger Property="UIElement.IsFocused" Value="True">
                  <Setter TargetName="border" Value="{DynamicResource AccentBrush}" Property="system:Border.BorderBrush" />
                </Trigger>
              </system:ControlTemplate.Triggers>
            </system:ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="{x:Type system:CheckBox}" TargetType="{x:Type system:CheckBox}">
        <Setter Property="Margin" Value="0,6" />
        <Setter Property="FrameworkElement.Cursor" Value="Hand" />
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Template">
          <Setter.Value>
            <system:ControlTemplate TargetType="{x:Type system:CheckBox}">
              <system:StackPanel Orientation="Horizontal">
                <system:Border Name="checkBorder" Width="20" Height="20" Background="{DynamicResource CardBgBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1.5" CornerRadius="5">
                  <Path Name="checkMark" Width="12" Height="12" Data="M2,6 L5,9 L10,3" Stroke="#FFFFFFFF" StrokeThickness="2" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </system:Border>
                <system:ContentPresenter Margin="10,0,0,0" VerticalAlignment="Center" />
              </system:StackPanel>
              <system:ControlTemplate.Triggers>
                <Trigger Property="ToggleButton.IsChecked" Value="True">
                  <Setter TargetName="checkBorder" Value="{DynamicResource PrimaryBrush}" Property="system:Border.Background" />
                  <Setter TargetName="checkBorder" Value="{DynamicResource PrimaryBrush}" Property="system:Border.BorderBrush" />
                  <Setter TargetName="checkMark" Property="Visibility" Value="Visible" />
                </Trigger>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <Setter TargetName="checkBorder" Value="{DynamicResource SubtleTextBrush}" Property="system:Border.BorderBrush" />
                </Trigger>
              </system:ControlTemplate.Triggers>
            </system:ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="{x:Type system:TabControl}" TargetType="{x:Type system:TabControl}">
        <Setter Property="Background" Value="#00FFFFFF" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
      </Style>
      <Style x:Key="NavigationTabControl" TargetType="{x:Type system:TabControl}" BasedOn="{StaticResource {x:Type system:TabControl}}">
        <Setter Property="Template">
          <Setter.Value>
            <system:ControlTemplate TargetType="{x:Type system:TabControl}">
              <system:Border Background="{TemplateBinding system:Control.Background}" BorderBrush="{TemplateBinding system:Control.BorderBrush}" BorderThickness="{TemplateBinding system:Control.BorderThickness}">
                <system:ScrollViewer Focusable="False" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                  <TabPanel IsItemsHost="True" />
                </system:ScrollViewer>
              </system:Border>
            </system:ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="{x:Type system:TabItem}" TargetType="{x:Type system:TabItem}">
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="Margin" Value="0,0,0,4" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{DynamicResource SubtleTextBrush}" />
        <Setter Property="FrameworkElement.Cursor" Value="Hand" />
        <Setter Property="Template">
          <Setter.Value>
            <system:ControlTemplate TargetType="{x:Type system:TabItem}">
              <system:Border Name="border" Background="#00FFFFFF" CornerRadius="8" Padding="{TemplateBinding system:Control.Padding}" Margin="{TemplateBinding FrameworkElement.Margin}">
                <system:ContentPresenter Name="contentPresenter" ContentSource="Header" HorizontalAlignment="Left" VerticalAlignment="Center" />
              </system:Border>
              <system:ControlTemplate.Triggers>
                <Trigger Property="system:TabItem.IsSelected" Value="True">
                  <Setter TargetName="border" Value="{DynamicResource PrimaryBrush}" Property="system:Border.Background" />
                  <Setter Property="Foreground" Value="#FFFFFFFF" />
                </Trigger>
                <MultiTrigger>
                  <MultiTrigger.Conditions>
                    <Condition Property="system:TabItem.IsSelected" Value="False" />
                    <Condition Property="UIElement.IsMouseOver" Value="True" />
                  </MultiTrigger.Conditions>
                  <Setter TargetName="border" Value="{DynamicResource HoverBgBrush}" Property="system:Border.Background" />
                </MultiTrigger>
              </system:ControlTemplate.Triggers>
            </system:ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="{x:Type system:ScrollViewer}" TargetType="{x:Type system:ScrollViewer}">
        <Setter Property="Background" Value="#00FFFFFF" />
      </Style>
      <Style x:Key="TransparentScrollBarButton" TargetType="{x:Type RepeatButton}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type RepeatButton}">
              <Border Background="{TemplateBinding Background}" />
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="GlassScrollBarThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="MinWidth" Value="6" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type Thumb}">
              <Border x:Name="ThumbBody" CornerRadius="3" Background="{DynamicResource ScrollBarThumbBrush}">
                <Border.Effect>
                  <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.1" Direction="270" />
                </Border.Effect>
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter TargetName="ThumbBody" Property="Background" Value="{DynamicResource ScrollBarThumbHoverBrush}" />
                </Trigger>
                <Trigger Property="IsDragging" Value="True">
                  <Setter TargetName="ThumbBody" Property="Background" Value="{DynamicResource ScrollBarThumbPressedBrush}" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <ControlTemplate x:Key="GlassVerticalScrollBarTemplate" TargetType="{x:Type ScrollBar}">
        <Grid Width="{TemplateBinding Width}" Background="Transparent" SnapsToDevicePixels="True">
          <Border Margin="2,2,2,2" Background="{DynamicResource ScrollBarTrackBrush}" CornerRadius="3" />
          <Track x:Name="PART_Track" Margin="2,2,2,2" IsDirectionReversed="True">
            <Track.DecreaseRepeatButton>
              <RepeatButton Style="{StaticResource TransparentScrollBarButton}" Command="ScrollBar.PageUpCommand" />
            </Track.DecreaseRepeatButton>
            <Track.Thumb>
              <Thumb Style="{StaticResource GlassScrollBarThumbStyle}" />
            </Track.Thumb>
            <Track.IncreaseRepeatButton>
              <RepeatButton Style="{StaticResource TransparentScrollBarButton}" Command="ScrollBar.PageDownCommand" />
            </Track.IncreaseRepeatButton>
          </Track>
        </Grid>
      </ControlTemplate>
      <ControlTemplate x:Key="GlassHorizontalScrollBarTemplate" TargetType="{x:Type ScrollBar}">
        <Grid Height="{TemplateBinding Height}" Background="Transparent" SnapsToDevicePixels="True">
          <Border Margin="2,2,2,2" Background="{DynamicResource ScrollBarTrackBrush}" CornerRadius="3" />
          <Track x:Name="PART_Track" Margin="2,2,2,2">
            <Track.DecreaseRepeatButton>
              <RepeatButton Style="{StaticResource TransparentScrollBarButton}" Command="ScrollBar.PageLeftCommand" />
            </Track.DecreaseRepeatButton>
            <Track.Thumb>
              <Thumb Style="{StaticResource GlassScrollBarThumbStyle}" MinHeight="6" />
            </Track.Thumb>
            <Track.IncreaseRepeatButton>
              <RepeatButton Style="{StaticResource TransparentScrollBarButton}" Command="ScrollBar.PageRightCommand" />
            </Track.IncreaseRepeatButton>
          </Track>
        </Grid>
      </ControlTemplate>
      <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Width" Value="10" />
        <Setter Property="Template" Value="{StaticResource GlassVerticalScrollBarTemplate}" />
        <Style.Triggers>
          <Trigger Property="Orientation" Value="Horizontal">
            <Setter Property="Height" Value="10" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Template" Value="{StaticResource GlassHorizontalScrollBarTemplate}" />
          </Trigger>
        </Style.Triggers>
      </Style>
      <Style x:Key="{x:Type system:ContextMenu}" TargetType="{x:Type system:ContextMenu}">
        <Setter Property="Background" Value="{DynamicResource CardBgBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Template">
          <Setter.Value>
            <system:ControlTemplate TargetType="{x:Type system:ContextMenu}">
              <Border Background="{TemplateBinding system:Control.Background}" BorderBrush="{TemplateBinding system:Control.BorderBrush}" BorderThickness="{TemplateBinding system:Control.BorderThickness}" CornerRadius="10" Padding="{TemplateBinding system:Control.Padding}">
                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
              </Border>
            </system:ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="{x:Type system:MenuItem}" TargetType="{x:Type system:MenuItem}">
        <Setter Property="Background" Value="#00FFFFFF" />
        <Setter Property="BorderBrush" Value="#00FFFFFF" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Margin" Value="2,1" />
        <Setter Property="FrameworkElement.Cursor" Value="Hand" />
        <Setter Property="Template">
          <Setter.Value>
            <system:ControlTemplate TargetType="{x:Type system:MenuItem}">
              <Border Name="MenuItemBorder" Background="{TemplateBinding system:Control.Background}" BorderBrush="{TemplateBinding system:Control.BorderBrush}" BorderThickness="{TemplateBinding system:Control.BorderThickness}" CornerRadius="8" Padding="{TemplateBinding system:Control.Padding}">
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <ContentPresenter Name="IconPresenter" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Icon" Margin="0,0,8,0" />
                  <ContentPresenter Grid.Column="1" VerticalAlignment="Center" ContentSource="Header" />
                  <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="12,0,0,0" Foreground="{DynamicResource SubtleTextBrush}" Text="{TemplateBinding system:MenuItem.InputGestureText}" />
                </Grid>
              </Border>
              <system:ControlTemplate.Triggers>
                <Trigger Property="Icon" Value="{x:Null}">
                  <Setter TargetName="IconPresenter" Property="Visibility" Value="Collapsed" />
                </Trigger>
                <Trigger Property="IsHighlighted" Value="True">
                  <Setter TargetName="MenuItemBorder" Property="Background" Value="{DynamicResource HoverBgBrush}" />
                  <Setter TargetName="MenuItemBorder" Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                  <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}" />
                </Trigger>
              </system:ControlTemplate.Triggers>
            </system:ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </ResourceDictionary>
  </Application.Resources>
