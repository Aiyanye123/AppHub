      <SolidColorBrush x:Key="PageRootBgBrush" po:Freeze="False" Color="{StaticResource AppBgColor}" />
      <SolidColorBrush x:Key="SidebarBgBrush" po:Freeze="False" Color="{StaticResource CardBgColor}" />
